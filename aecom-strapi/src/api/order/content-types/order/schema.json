{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "inversedBy": "orders"
    },
    "totalPrice": {
      "type": "decimal",
      "required": true
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "shipped",
        "delivered",
        "cancelled"
      ]
    },
    "shippingAddress": {
      "type": "component",
      "component": "shared.address",
      "repeatable": false
    },
    "orderCreatedAt": {
      "type": "datetime"
    },
    "orderUpdatedAt": {
      "type": "datetime"
    },
    "stripe_session_id": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "orderItems": {
      "type": "component",
      "component": "shared.order-item",
      "repeatable": true
    }
  }
}
